{% layout 'layout.liquid' %}

{% block content %}

{% if session.username %}
    <p>Hello, {{session.username}}!</p>
        <div>
            <h2>{{party.name}}</h2>
            <a href="/parties/{{party._id}}/edit">Edit Details</a>
            <h3>{{party.date}}</h3>
            <form action="/archives/{{party._id}}" method="POST">
                <input class="btn btn-warning" type="submit" value="Mark Complete">
            </form>
            <div class="row">
                {% for movie in party.movies %}
                    <div class="card" style="width: 24rem">
                    <h5 class="card-header">{{movie.title}}</h5>
                        <div class="card-body">
                            <img style="max-width: 50%;"src="{{movie.image}}">
                        </div>
                        <div class="card-body">
                            <p>{{movie.plot}} | {{movie.runtimeStr}}</p>
                            <form action="/movies/{{movie._id}}/{{party._id}}?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-danger" value="Delete Movie">
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="/parties/{{party._id}}/search" class="btn btn-success">Add a Movie</a>
            <a href="/parties/" class="btn btn-info">Back to Index</a>
        </div>
        <div class="container">
            <form action="/snacks/{{party._id}}" method="POST">
                <fieldset>
                    <label for="name">Snack Name</label>
                    <input type="text" id="name" name="name" minlength="1" class="form-control">
                    <label for="purchased">Have you bought it yet?</label>
                    <input type="checkbox" id="purchased" name="purchased" class="form-check-input">
                </fieldset>
                <input type="submit" value="Add Snack to {{party.name}}" class="btn btn-success">
            </form>
        </div>
        {% if party.snacks.length > 0 %}
            <div class="container">
                {% for snack in party.snacks %}
                    <div>
                        <p>{{snack.name}}</p>
                        {% if snack.purchased %}
                            <p>Don't worry, it's ready to go.</p>
                            <form id="stockCheck" action="/snacks/{{party._id}}/{{snack._id}}?_method=PUT" method="POST">
                                <label>In Stock</label>
                                <input
                                    type="checkbox"
                                    class="form-check-input"
                                    name="purchased"
                                    checked
                                    onchange="document.getElementById('stockCheck').submit()"
                                >
                            </form>
                        {% else %}
                            <p>Oops, looks like you need to make a grocery run.</p>
                            <form id="stockCheck" action="/snacks/{{party._id}}/{{snack._id}}?_method=PUT" method="POST">
                                <label>In Stock</label>
                                <input
                                    type="checkbox"
                                    class="form-check-input"
                                    name="purchased"
                                    onchange="document.getElementById('stockCheck').submit()"
                                >
                            </form>
                        {% endif %}
                        <form action="/snacks/{{party._id}}/{{snack._id}}?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-danger" value="Delete Snack">
                        </form>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endif %}
        
{% endblock %}