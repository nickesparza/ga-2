{% layout 'layout.liquid' %}

{% block content %}
<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="/parties/new" method="POST">
                <fieldset>
                    <legend>Create New Watch Party</legend>
                    <label class="form-label" for="name">Party Name:</label>
                    <input type="text" id="name" name="name" class="form-control" minlength="1" maxlength="32" required pattern="[A-Za-z0-9]" title="name may only contain letters and/or numbers">
                    <label class="form-label" for="date">Party Date:</label>
                    <input type="date" id="date" name="date" class="form-control" required>
                </fieldset>
                <input 
                    type="submit" 
                    value="Create" 
                    class="btn btn-primary my-3"
                >
                <a href="/parties" class="btn btn-info">Return to Main Page</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}