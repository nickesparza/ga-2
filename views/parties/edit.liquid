{% layout 'layout.liquid' %}

{% block content %}
    <div class="container-md">
        <form action="/parties/{{party._id}}/edit?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{party.name}}</legend>
                <label class="form-label" for="name">New Name:</label>
                <input type="text" id="name" name="name" value="{{party.name}}" class="form-control">
                <label class="form-label" for="date">New Date:</label>
                <input type="date" id="date" name="date" value="{{party.date}}" class="form-control">
            </fieldset>
            <input 
                type="submit" 
                value="Edit Party" 
                class="btn btn-success"
            >
        </form>
    </div>
    <div class="container-md">
        <form action="/parties" method="GET">
            <input class="btn btn-danger" type="submit" value="Return to Main Page">
        </form>
    </div>
{% endblock %}