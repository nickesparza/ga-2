{% layout 'layout.liquid' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form action="/user/login" method="POST">
                    <fieldset>
                        <legend>Log in to Your Account</legend>
                        <label class="form-label" for="username">Username:</label>
                        <input type="text" id="username" name="username" class="form-control" required minlength="1" maxlength="32" pattern="[A-Za-z0-9]{4,32}" title="username may only contain letters and/or numbers">
                        <label class="form-label" for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control" required pattern="[A-Za-z0-9]{4,32}" title="username may only contain letters and/or numbers">
                    </fieldset>
                    <input 
                        type="submit" 
                        value="Log In" 
                        class="btn btn-success my-3"
                    >
                </form>
            </div>
        </div>
    </div>
{% endblock %}